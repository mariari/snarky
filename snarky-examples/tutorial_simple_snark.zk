/* Let's make a SNARK.

  The SNARK will function as follows:
  Public-input:
    two field elements x and z

  Proves:
    z = x^8
*/

/* This brings all the definitions from the Field module into scope */
open Field;

let main = fun (x, z, ()) => {
  let x2 = x * x;
  let x4 = x2 * x2;
  // This says assert x^4 * x^4 = x^8.
  assert_r1(x4, x4, z);
};
